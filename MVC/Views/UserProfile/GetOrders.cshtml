@using Entity.Concrete;
@model List<OrderDetails>
@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-warning border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Siparişlerim</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Menü</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ekstralar</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Toplam Tutar</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tarih</th>
                                    <th class="text-secondary opacity-7"></th> 
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@item.Menu.Image" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Menu.Name</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.Quantity</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@item.Extra.Image" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Extra.Name</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.Quantity</p>
                                                </div>
                                            </div>
                                        </td>
                                        @if(item.State)
                                        {
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-success">Devam Ediyor</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-secondary">Tamamlandı</span>
                                            </td>
                                        }

                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.ModifiedTime</span>
                                        </td>
                                        @if (item.State)
                                        {
                                            <td class="align-middle">
                                                <a asp-action="EditOrder" asp-controller="UserProfile" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Güncelle
                                                </a>
                                            </td>
                                        }
                                         <td class="align-middle">
                                                <a asp-action="DeleteOrder" asp-controller="UserProfile" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Sil
                                                </a>
                                            </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
