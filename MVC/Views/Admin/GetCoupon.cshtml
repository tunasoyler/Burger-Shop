
@{
    ViewData["Title"] = "GetCoupon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Entity.Concrete;
@using MVC.Models;
@model CouponVM

<h1 class="bg-info text-white">Kuponlar</h1>
@if (TempData["result"] != null)
{
    <script>
        alert("İşlem başarılı");
    </script>
}
@if (TempData["resultError"] != null)
{
    <script>
        alert("İşlem başarısız");
    </script>
}



<a asp-action="CreateCoupon" asp-controller="Admin" class="btn btn-secondary">Kupon Oluştur</a>
<br />
<br />
<div class="container">
    <table class=" table table-sm table-bordered">
        <tr>
            <th>ID</th>
            <th>Kupon İsmi</th>
            <th>Kupon Kodu</th>
            @*<th>Başlangıç Tarihi</th>*@
            <th>Aktiflik Durumu</th>
            <th>Güncelle</th>
            <th>Sil</th>

           
        </tr>
        @foreach (var item in Model.CouponList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CouponCode</td>
               @* <td>@item.CreatedTime</td>*@
                <td>@item.State</td>
              
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="UpdateCoupon" asp-controller="Admin" asp-route-id="@item.Id">Güncelle</a>
                </td>
                <td>
                       <form asp-action="DeleteCoupon" asp-controller="Admin" asp-route-id="@item.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                </form>
                </td>
            </tr>
        }

    </table>
</div>


