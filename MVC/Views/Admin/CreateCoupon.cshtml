@using Entity.Concrete;
@model Coupon
@{
    ViewData["Title"] = "CreateCoupon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="bg-info text-white">Yeni Kupon Oluşturma</h1>
@if (TempData["result"] != null)
{
    <script>
        alert("İşlem başarılı");
    </script>
}
@if (TempData["resultError"] != null)
{
    <script>
        alert("İşlem başarısız");
    </script>
}
<a asp-action="GetCoupon" asp-controller="Admin" class="btn btn-secondary">Kupon Listesi</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateCoupon" asp-controller="Admin" method="post">
  
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CouponCode"></label>
        <input asp-for="CouponCode" class="form-control" />
    </div>
