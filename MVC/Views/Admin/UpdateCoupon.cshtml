@using Entity.Concrete;
@model Coupon
@{
    ViewData["Title"] = "UpdateCoupon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="bg-info text-white">Update User</h1>
<a asp-action="GetCoupon" asp-controller="Admin" class="btn btn-secondary">Kupon Listesi</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="UpdateCoupon" asp-controller="Admin" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CouponCode"></label>
        <input asp-for="CouponCode" class="form-control" />
    </div>
    <div class="form-group form-check">
        <label asp-for="State" class="form-check-label"></label>
        <input class="form-check-input" asp-for="State" />
    </div>
    @*    <div class="form-group">
    <label asp-for="State"></label>
    <input asp-for="State" class="form-control" />
    </div>*@
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>
